
@{
    ViewData["Title"] = "Bolo de Pote";
}

<link rel="stylesheet" href="~/css/BoloPote.css" />

<div class="toolbar">
    <h1 class="brand">Bolos de Pote:</h1>
    <br>
    <p>
        <a asp-controller="Carrinho" asp-action="Carrinho">
            Itens no Carrinho:
            <span id="count">0</span>, Total:
            <span id="sum">0</span>
        </a>
    </p>
</div>

<div class="products">
    <div class="product">
        <h3>Bolo de Pote 1kg</h3>
        <p class="img-bolopote">
            <img src="~/img/bolouva.png" />Valor: R$40,00
        </p>
        <p class="descricao_bolo">
            Recheio e massa disponível a pronta entrega:
        <p class="recheiobolo">
            Recheio: Brigadeiro com Doce de leite
            Massa: Massa de chocolate
        </p>

        <button data-id="1" data-price="40" data-title="Bolo de Pote 1kg">Adicionar ao carrinho</button>
    </div>

    <div class="product">
        <h3>Bolo de Pote 2kg</h3>
        <p class="img-bolopote">
            <img src="~/img/bolomorango.png" />Valor: R$70,00
        </p>
        <p class="descricao_bolo">
            Recheio e massa disponível a pronta entrega:
        <p class="recheiobolo">
            Recheio: Brigadeiro com Doce de leite
            Massa: Massa de chocolate
        </p>

        <button data-id="2" data-price="70" data-title="Bolo de Pote 2kg">Adicionar ao carrinho</button>
    </div>
</div>


<script href="~/js/app.js"></script>
<script href="~/js/cart.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>