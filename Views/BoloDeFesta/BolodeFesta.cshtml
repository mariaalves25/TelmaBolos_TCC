
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/BoloFesta.css" />

<div class="toolbar">
    <h1 class="brand">Bolos de Festa:</h1>
    <br>
    <p>
        <a asp-controller="Carrinho" asp-action="Carrinho">
            Itens no Carrinho:
            <span id="count">0</span>, Total:
            <span id="sum">0</span>
        </a>
    </p>
</div>


<div class="products">
