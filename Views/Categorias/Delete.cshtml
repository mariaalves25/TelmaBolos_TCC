@model TelmaBolossite.Entidades.Categoria

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<h1>Excluir Categoria</h1>

<h3>Tem certeza de que deseja excluir este item?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-outline-danger" /> |
        <a class="btn btn-outline-success" asp-action="Index">Retornar à lista</a>
    </form>
</div>
