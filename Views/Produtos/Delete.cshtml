@model TelmaBolossite.Entidades.Produto

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/Delete.css" asp-append-version="true" />

<h1>Excluir Produto</h1>

<h3>Tem certeza de que deseja excluir este produto?</h3>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.descricaoproduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricaoproduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valorproduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valorproduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.unidadeproduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.unidadeproduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar à lista</a>
    </form>
</div>
