@model IEnumerable<TelmaBolossite.Entidades.Produto>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Produtos:</h1>

<p>
    <a class="btn btn-secondary btn-sm" asp-action="Create">Cadastrar novo produto</a>
</p>

<p>
    <a class="btn btn-secondary btn-sm" asp-controller="Categorias" asp-action="Index">Criar nova categoria</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Descrição do produto
                
           </th>
            <th>
                Valor
            </th>
            <th>
              Unidade
            </th>
            <th>
                Categoria
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descricaoproduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valorproduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unidadeproduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Id)
            </td>
            <td>

                    <a asp-action="Edit" class="btn btn-outline-secondary" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" class="btn btn-outline-secondary" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
